<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/fondo">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Primera aplicacion android"
            android:textSize="30sp" android:textColor="#D61A1A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/maitree_extralight"/>
    <Button
            android:text="Ingresar"
            android:layout_width="0dp"
            android:fontFamily="@font/maitree_extralight"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="579dp"
            android:id="@+id/ingresar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" android:background="@android:color/holo_red_dark"
            android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintHorizontal_bias="1.0"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>